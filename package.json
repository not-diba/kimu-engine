{
  "name": "kimu-engine",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts generated",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run generate && tsc",
    "generate": "bun run generate:prisma && bun run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "bun src/schema.ts",
    "migrate": "bash -c 'read -p \"Migration name: \" name; bunx prisma migrate dev --name \"$(date +%Y%m%d-%H%M)-$name\"'"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@apollo/server": "4.12.2",
    "@prisma/client": "^6.11.1",
    "graphql": "16.11.0",
    "graphql-scalars": "1.24.2",
    "nexus": "1.3.0"
  },
  "devDependencies": {
    "@types/node": "22.15.32",
    "prisma": "^6.11.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.8.2"
  }
}
