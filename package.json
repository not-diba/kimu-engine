{
  "name": "kimu-engine",
  "type": "module",
  "scripts": {
    "dev": "bun src/server.ts",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "bun -s run clean && bun -s run generate && tsc",
    "generate": "bun -s run generate:prisma && bun -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@apollo/server": "4.12.2",
    "@prisma/client": "^6.11.0",
    "graphql": "16.11.0",
    "graphql-scalars": "1.24.2",
    "nexus": "1.3.0"
  },
  "devDependencies": {
    "@types/node": "22.15.32",
    "prisma": "^6.11.0",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.8.2"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
